{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"id-length": 0,
		"max-lines-per-function": 0,
		"max-statements": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"GetIntrinsic",
				"DefinePropertyOrThrow",
				"HasOwnProperty",
				"IsArray",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"Set",
				"ToObject",
				"ToString",
			]
		}],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"func-style": 0,
				"max-len": 0,
				"max-lines-per-function": 0,
				"no-invalid-this": 1,
				"strict": 0,
			},
		},
	],
}
