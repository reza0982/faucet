{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"multiline-comment-style": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"Get",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"ToObject",
				"ToString",
			]
		}],
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-lines-per-function": 0,
			},
		},
	],
}
